<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.pfaffhack.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_bestenliste"
        android:name="com.example.pfaffhack.ui.bestenliste.BestenlisteFragment"
        android:label="@string/title_bestenliste"
        tools:layout="@layout/fragment_bestenliste" />

    <fragment
        android:id="@+id/navigation_belohnung"
        android:name="com.example.pfaffhack.ui.belohnung.BelohnungFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_belohnung" />

    <activity
        android:id="@+id/navigation_statistics"
        android:name="com.example.pfaffhack.ui.statistics.StatisticsMainView"
        android:label="@string/title_statistics"
